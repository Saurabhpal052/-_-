<%- include('partials/header_log') %>


<form id="register" method="post">
    <div class="container">
        <form action="/">
            <h1>Login</h1>
            <div class="input-box">
                <input type="text" placeholder="Usrename or Email" name="email" required>
                <i class='bx bxs-user' ></i>
            </div>
            <div class="input-box">
                <input type="password" placeholder="password" name="password" required>
                <i class='bx bxs-lock-alt' ></i>
            </div>
            <div class="remember-forget">
                <label><input type="checkbox">Remember me</label>
                <a href="#">forget password</a>
            </div>
            <button type="submit" class="btn">Login</button>
            <div style="text-align: center; margin-right: 10px; background-color: white; border-radius: 5px;" >
                <p style="margin: 10px; color:rgb(255, 0, 0); font-size: 22px; font:bold">
                    <% if( typeof(result) =="undefined"){%>
                       <%const result="";  %> 
                    <% }else{ %>
                        <%= result %>
            
                    <%} %>
                </p></div>
            <div class="register-link">
                <p>Don't have an account?<a href="/signup" style="color: rgb(215, 103, 103);">Register</a></p>
            </div>

        </form>
    </div>
    </form>
</div>
